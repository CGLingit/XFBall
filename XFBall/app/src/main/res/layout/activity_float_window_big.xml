<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/float_window_big"
    android:layout_width="270dip"
    android:layout_height="270dip"
    android:rowCount="3"
    android:columnCount="3"
    android:background="@drawable/bg_big"
    tools:context="com.example.cglin.xfball.Float_window_big">
<!--3行3列-->
    <!--位于第一行第二列-->
    <Button
        android:id="@+id/lock"
        android:layout_width="90dip"
        android:layout_height="90dip"
        android:layout_row="0"
        android:layout_column="1"
        android:background="@drawable/ic_menu_lockscreen"
        android:onClick="lockScreen"
        />
    <!--第二行第一列-->
    <Button
        android:id="@+id/recent"
        android:layout_width="90dip"
        android:layout_height="90dip"
        android:layout_row="1"
        android:layout_column="0"
        android:background="@drawable/ic_star"
        />
    <!--位于第二行第三列-->
    <Button
        android:id="@+id/back"
        android:layout_width="90dip"
        android:layout_height="90dip"
        android:layout_row="1"
        android:layout_column="2"
        android:background="@drawable/ic_back"
        />
    <!--位于第三行第二列-->
    <Button
        android:id="@+id/home"
        android:layout_width="90dip"
        android:layout_height="90dip"
        android:layout_row="2"
        android:layout_column="1"
        android:background="@drawable/ic_menu_home"
        />
</GridLayout>
